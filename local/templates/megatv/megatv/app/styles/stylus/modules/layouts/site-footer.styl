//
// Layouts / Site Footer
// -------------------------------------------------- //

.site-footer {
	flex-shrink 0

	.footer-content {
		height 54px
		padding 13px 30px
		background-color #000
		clearfix()

		@media screen and (max-width: 440px) {
			height auto
			text-align center
		}

		.footer-logo {
			display block
			float left
			width 57px
			height 28px
			background-image url("data:image/svg+xml;base64,")
			background-repeat no-repeat
			background-position center
			background-size 100%

			@media screen and (max-width: 440px) {
				margin 0 auto
				float none
			}
		}
		.copyrights {
			float right
			margin-bottom 0
			color #fff
			font-size 1.2rem
			line-height 2.8rem
			-webkit-font-smoothing subpixel-antialiased
			-moz-osx-font-smoothing auto

			@media screen and (max-width: 440px) {
				float none
			}

			a {
				display inline-block
				text-decoration none
				border-bottom 1px dotted
				line-height 1.2

				&:hover {
					border-bottom-color transparent
				}
			}
		}
	}
}


.page-recommendations .site-footer,
.page-records .site-footer {
	.footer-content {
		@media screen and (max-width: 440px) {
			height auto
			text-align center
		}

		.footer-logo {
			@media screen and (max-width: 440px) {
				margin 0 auto
				float none
			}
		}
		.copyrights {
			@media screen and (max-width: 440px) {
				float none
			}
		}
	}
}