.site-header {
	flex-shrink 0
	position relative

	// Top panel
	.top-panel {
		background-color #fff
		height 80px
		display flex
		align-items center
		position relative

		.logo {
			display block
			width 100px
			height 54px
			margin 0 30px
			background-image url("data:image/svg+xml;base64,")
			background-repeat no-repeat
			background-position center
			background-size 100%
		}

		.city-select {
			max-width 196px

			select {
				width 196px
				height 40px
				border 2px solid #226dd8
				border-radius 0
				apperance none
				opacity 0
			}
			.popover {
				min-width 243px
				text-align center

				.popover-content {
					padding 17px 23px 21px
				}
				p {
					font-size 1.6rem
				}
				ul {
					list-style none
					margin 0
					padding 0

					li {
						display inline-block

						&:first-child {
							color #747474

							a {
								color #747474
							}
							&:after {
								content '|'
								margin 0 7px
							}
						}
					}
				}
			}
		}

		.lang-select {
			height 40px
			margin 0 20px

			select {
				apperance none
				opacity 0
			}
		}

		.search-form {
			margin-left auto
			margin-right 25px
		}

		.sections-menu {
			display flex;
			list-style none
			height 100%
			padding 0
			margin 0

			li {
				height 100%

				&.active {
					a {
						color #fff
						background-color brand-primary
					}
					[class~="icon"] {
						fill #fff
					}
					span:not([data-icon]) {
						border-bottom-color transparent
					}
				}
			}
			a {
				display flex
				align-items center
				justify-content center
				height 100%
				width 100%
				white-space nowrap
				padding 0 20px
				color #908f8f
				text-decoration none

				[class~="icon"] {
					fill brand-primary
				}
				span:not([data-icon]) {
					display inline-block
					line-height 2.2rem
					position relative
					border-bottom 1px dotted
				}

				&:hover,
				&:focus {
					span:not([data-icon]) {
						border-bottom-color transparent
					}
				}
			}
			li.sections-menu-recordings {
				span:not([data-icon]) {
					.count {
						border-bottom none
						font-size 11px
						line-height 10px
						position absolute
						top -10px
						right 0
					}
				}
			}
		}
	}

	.top-menu {
		list-style none
		margin 8px 0 6px
		padding 0
		float right

		li {
			float left
			line-height 22px
			padding 0 17px

			&.active a {
					color brand-primary
			}
		}
		a {
			text-decoration none
			color #202020
			display inline-block
			line-height 22px

			&:hover,
			&:focus {
				color brand-primary
			}
		}
		.badge {
			vertical-align middle
			display inline-block
			height 16px
			line-height 1.2
			min-width 16px
			border-radius 10px
			color #fff
			font-weight 500
			padding 3px
			background-color red
			font-size .9rem
			margin 0 2px
			position relative
			top -1px
			-webkit-font-smoothing subpixel-antialiased
			-moz-osx-font-smoothing auto
			text-align center
		}
	}
	.header-user {
		background-color #f4f3f3
		display flex
		align-items center
		padding 0 30px
		height 100%

		.fill-disk-space {
			display flex
			margin-right 20px

			.progress-holder {
				width 18px
				height 18px
				display inline-block
				margin-right 5px
				vertical-align middle
			}
			.label {
				color #747474
				white-space nowrap
				vertical-align middle

				strong {
					color #353535
					font-weight bold
				}
			}
		}

		.header-nav {
			display flex
			align-items center
			height 100%
			margin 0
			padding 0
		}

		.user-actions {
			list-style none
			margin 0
			padding 0
			float right

			li {
				float left
				padding 0 7px
			}
			a {
				display inline-block
				text-decoration none
			}
			.signin-link {
				display inline-block
				line-height 1.7rem
				height 35px
				background-color brand-primary
				color #fff
				padding 9px 15px

				&:hover,
				&:focus {
					background-color mix(brand-primary, #fff, 90%)
				}
			}
			.signup-link {
				margin-top 8px
				border-bottom 1px dotted
				line-height 1.8rem

				&:hover {
					border-bottom-color transparent
				}
			}
		}
		.user-card {
			display flex
			align-items center
			padding-left 65px
			position relative

			.user-avatar {
				width 54px
				height 54px
				position absolute
				top 50%
				margin-top -27px
				left 0
				border 1px solid brand-primary
				border-radius 50%
				display flex
				justify-content center
				align-items center

				img {
					position relative
					display block
					border-radius 50%
					z-index 2
					width 42px
					height 42px
				}
				&.is-empty {

					&:before {
						position absolute
						content ''
						background url(../img/static/large-avatar-holder.svg) no-repeat 9px 8px/42px 56px brand-primary
						width 50px
						height 50px
						border-radius 50%
						top 50%
						left 50%
						margin -25px 0 0 -25px
					}

				}
			}
			.info-panel {
				display flex
				width 100%
				flex-direction column
				flex-wrap nowrap
				justify-content center
				align-items flex-start
			}
			.username {
				display inline-block
				white-space pre-wrap
				overflow: hidden;
				white-space: nowrap;
				text-overflow: overflow;
				color #000
				text-decoration none

				&:hover {
					color mix(#000, #fff, 90%)
				}
			}
			.signout-link {
				text-decoration none
				border-bottom 1px dotted
				line-height 1.3

				&:hover {
					border-bottom-color transparent
				}
			}
		}
	}
}



// Адаптивность только для двух типовых страниц

.page-recommendations .site-header,
.page-records .site-header {

	@media screen and (max-width: 1100px) and (min-width: 569px) {
		height 140px
	}

	// Top panel
	.top-panel {
		@media screen and (max-width: 568px) {
			flex-wrap wrap
			height auto
		}

		.logo {
			@media screen and (max-width: 768px) {
				margin-left 10px
				margin-right 10px
			}

			@media screen and (max-width: 568px) {
				margin-top 10px
				margin-bottom 10px
			}
		}
	}

	.city-select {
		@media screen and (max-width: 568px) {
			max-width none
			width 100%
			display flex
			justify-content flex-end
		}
	}

	.lang-select {
		@media screen and (max-width: 768px) and (min-width 569px) {
			margin-left 10px
			margin-right 10px
		}

		@media screen and (max-width: 568px) {
			display flex
			justify-content flex-end
			width 100%
			margin-left 0
			margin-right 0
		}
	}

	.search-form {
		@media screen and (max-width: 568px) {
			position absolute
			right 94px
			margin-right 0
			top 18px
		}
	}

	.sections-menu {
		@media screen and (max-width: 1100px) {
			border-top 1px solid #eee
			border-bottom 1px solid #eee
			justify-content space-around
		}

		@media screen and (max-width: 1100px) and (min-width: 441px) {
			height 60px
		}

		@media screen and (max-width: 1100px) and (min-width: 569px) {
			margin-top -1px
			position absolute
			top 100%
			left 0
			width 100%
		}

		@media screen and (max-width: 568px) {
			height auto
			flex-wrap wrap
			width 100%
		}

		li {
			@media screen and (max-width: 1100px) {
				display flex
				justify-content center
			}

			@media screen and (max-width: 1100px) and (min-width: 441px) {
				width 33.33%
			}

			@media screen and (max-width: 440px) {
				width 100%
			}
		}
		a {
			@media screen and (max-width: 568px) {
				padding 0 5px
			}
			@media screen and (max-width: 440px) {
				min-height 60px
			}
		}
	}
	.header-user {
		@media screen and (max-width: 768px) {
			background-color transparent
		}

		@media screen and (max-width: 768px) and (min-width: 569px) {
			padding-left 10px
			padding-right 10px
		}

		@media screen and (max-width: 568px) {
			position absolute
			height auto
			padding 0
			top 10px
			right 10px
		}

		.fill-disk-space {
			@media screen and (max-width: 1366px) {
				display none
			}
		}

		.user-card {
			@media screen and (max-width: 1240px) {
				padding-left 0
			}

			.user-avatar {
				@media screen and (max-width: 1240px) {
					margin-top 0
					position relative
					top auto
					left auto
				}
			}
			.info-panel {
				@media screen and (max-width: 1400px) {
					display none
				}
			}
			.username {
				@media(max-width: 1600px) {
					max-width 180px
				}
				@media(max-width: 1420px) {
					max-width 120px
				}
			}
		}
	}
}