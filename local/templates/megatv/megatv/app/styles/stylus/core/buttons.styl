// Block button
// --------------------------------------------------

.btn-block {
  display block
  width 100%
}

// Vertically space out multiple block buttons
.btn-block + .btn-block {
  margin-top 5px
}

// Specificity overrides
input[type="submit"],
input[type="reset"],
input[type="button"] {
  &.btn-block {
    width 100%
  }
}

// Multistates button
// --------------------------------------------------

.btn-multistate {
  padding 0
  min-height 50px
  position relative
  overflow hidden

  &:before {
    content ''
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    opacity 0
    transition opacity .3s linear, background-color .3s linear
  }

  [class*="state"] {
    position absolute
    top 0
    left 0
    width 100%
    padding 15px 20px
    z-index 2

    &.active {
      animation .3s showActiveButtonState cubic-bezier(.63,.15,.45,.9) !important
      animation-fill-mode forwards !important
    }
    &.init-state {
      animation none !important

      ~ [class*="state"] {
        opacity 0
        transform translateY(-100%)
      }
    }
  }
  &[class*="is-inited"] {
    [class*="state"] {
      animation .3s hideButtonState cubic-bezier(.63,.15,.45,.9)
      animation-fill-mode forwards
    }
  }
  &.is-done-state {
    background url("data:image/png;base64,") repeat 0 -25px #1675f8
    animation .3s showAltButtonStateBefore cubic-bezier(.63,.15,.45,.9)
    animation-fill-mode forwards
    opacity 1
  }
  &.is-fail-data-state,
  &.is-fail-network-state  {
    background url("data:image/png;base64,") repeat 0 -25px #ee5e59
    animation .3s showAltButtonStateBefore cubic-bezier(.63,.15,.45,.9)
    animation-fill-mode forwards
    opacity 1
  }
}
